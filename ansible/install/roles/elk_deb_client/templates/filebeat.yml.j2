filebeat.prospectors:
- type: log
  enabled: true
  paths:
    - /var/log/apache2/*.log
    - /var/log/mysql/*.log
output.logstash:
  hosts: ["{{ elk_server }}:{{ logstash_syslog_port }}"]
  ssl:
    certificate_authorities: [/etc/beat/beat-forwarder.crt]
    certificate: "/etc/beat/beat-forwarder.crt"
    key: "/etc/beat/beat-forwarder.key"
